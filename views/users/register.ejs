<%layout('layouts/boilerplate')%> 

<div class="container d-flex justify-content-center align-items-center mt-5 w-100" data-aos="fade-up">
    <div class="row container-official">
        <div class="col-md-6- offset-md-3 col-xl-6 offset-xl-4 mb-5">
            <div class="card shadow logo-size-official">
                <img src="/img/indianrailway.png" alt="" class="card-img-top" />
                <div class="card-body">
                <h5 class="card-title">Register</h5>
                <form action="/user/register" method="POST" class="validate-form" novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="username">Enter Username</label>
                        <input class="form-control" type="text" id="username" name="username" autofocus required>
                        <div class="valid-feedback">
                            Success! </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="name">Enter Full Name</label>
                        <input class="form-control" type="text" id="name" name="name" required>
                        <div class="valid-feedback">
                            Success! </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="email">Enter Email</label>
                        <input class="form-control" type="email" id="email" name="email" required>
                        <div class="valid-feedback">
                            Success! </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="designation">Enter Designation</label>
                        <input class="form-control" type="text" id="designation" name="designation">
                        <div class="valid-feedback">
                            Success! </div>
                    </div>  
                    <div class="mb-3">
                        <label class="form-label" for="password">Enter Password</label>
                        <input class="form-control" type="password" id="password" name="password" required>
                        <div class="valid-feedback">
                            Success!</div>
                    </div>
                        <button class="btn btn-success w-100">Register</button>
                </form>
            </div>
            </div>
        </div>
    </div>
</div>

