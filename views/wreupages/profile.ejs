<% layout('layouts/boilerplate')%>
<body>
    <section class="admin-panel">
    <div class="row">
        <h1 class="text-center">Edit Profile Details</h1>
        <div class="col-6 offset-3">

            <form action="/<%=wreu._id%>?_method=PUT" method="POST" novalidate class="validate-form" 
                                    enctype="multipart/form-data">
                <div class="mb-3"> 
               <label class="form-label" for="bannername">Add News : </label>
                <textarea class="form-control" name="bannername" type="text" id="bannername"> <%=banner.bannerName%> </textarea>
                </div>
                
                <div class="mb-3">
                    <label for="image" class="form-label">Profile Photo:</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                  </div>
                
                  <div class="mb-3">
                    <% wreu.profileimages.forEach(function(img,i){ %>
                    <img src="<%=img.url%>"  alt="" class="img-thumbnail"  width="200" height="160">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.key%>">
                    </div>
                    <label for="image-<%=i%>">Delete?</label>    
                    <% }) %>  
                </div>
 <!-- ----------------------------------------------Slider-Photos portion -------------------------------------------------->
                <div class="mb-3">
                    <label for="sliderImage" class="form-label">Slider Photos:</label>
                    <input class="form-control" type="file" id="sliderImage" name="sliderImage" multiple>
                  </div>
                <div class="mb-3">
                    <% wreu.sliderImages.forEach(function(img,i){ %>
                    <img src="<%=img.url%>"  alt="" class="img-thumbnail"  width="200" height="160">
                    <div class="form-check-inline">
                        <input type="checkbox" id="sliderImage-<%=i%>" name="deleteImages[]" value="<%=img.key%>">
                    </div>
                    <label for="sliderImage-<%=i%>">Delete?</label>    
                    <% }) %>  
                </div>
                <button class="btn btn-info mb-3">Save</button>
            </form>       
            <button class="btn btn-danger">
                <a href="/">BACK</a>
            </button>
        </div>
    </div>
</section>
    </body>