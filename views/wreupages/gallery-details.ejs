<% layout('layouts/boilerplate')%>   

   <!-- ======= Portfolio Details Section ======= -->
    <section id="portfolio-details" class="portfolio-details">
      
        <div class="container main-gallery-details">
          <div class="row gy-4">
            <div class="col-lg-8">
              <div class="portfolio-details-slider swiper-container">
                <div class="swiper-wrapper align-items-center">
                  <% imagesData.forEach((img,i) => {  %>
                     
                    <div class="swiper-slide">
                    <img src="<%=img.url%>" alt="">
                    </div>
                  
                  <% })  %> 
                </div>
                <%if(imagesData.length>1) { %> 
                <div class="swiper-pagination"></div>
                <% } %> 
              </div>
            </div>
  
            <div class="col-lg-4">
              <div class="portfolio-info gallery-details">
                <h3>Details</h3>
                <ul>
                  <li><strong>By</strong> : <%=imagesInfo.author.name%> </li>
                  <li><strong>Date</strong> : <%=imagesInfo.date%>  </li>
                </ul>
              </div>
              <% if(currentUser && imagesInfo.author.equals(currentUser._id)) { %> 
              <div class="col-lg-12">
                <div class="portfolio-info">
                  <h3>Admin Panel</h3>
                  <a href="/<%=imagesInfo._id%>/images/edit" class="btn btn-secondary"> Edit </a>
                  <form class="d-inline" action="/<%=imagesInfo._id%>/images/edit?_method=DELETE" method="POST">
                      <button class="btn btn-danger">DELETE</button>
                  </form>
                 </div>
              </div>
              <% } %> 
            </div>

          </div>
        </div>
        <div class="container">
          <div class="row gy-4">
          <div class=" col-lg-12">
          <div class="portfolio-description">
            <h2> <%=imagesInfo.title%>  </h2>
            <p> <%=imagesInfo.description%>  </p>
          </div>
        </div> 
      </div>
      <button class="btn btn-info mt-4">
        <a href="/images">BACK</a>
    </button>
    </div>
      </section><!-- End Portfolio Details Section -->

      
  