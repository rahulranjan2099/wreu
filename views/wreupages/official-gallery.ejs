<% layout('layouts/boilerplate')%>

<div class="official-gallery">
<section id="portfolio" class="portfolio">
    <div class="container">
      <div class="section-title">
        <h2 data-aos="fade-up">Pictures Gallery</h2>
      </div>
      <div class="row" data-aos="fade-up" data-aos-delay="100">
        <div class="col-lg-12 d-flex justify-content-center">
          <ul id="portfolio-flters">
            <% if(currentUser) { %> 
              <button type="button" class="btn btn-outline-dark">
                <a href="/newPhoto">Add Photos</a>
              </button>
              <% } %> 
          </ul>
        </div>
      </div>

      <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="200">
        <% for(let i=0; i<imagesInfo.length; i++) { %> 
        <div class="col-lg-4 col-md-6 portfolio-item filter-app">
          <img src="<%= imagesInfo[i].images[0].url %>" class="img-fluid" alt="">
          <div class="portfolio-info">
            <h4><%= imagesInfo[i].title.substring(0, 80) %></h4>
            <p><%= imagesInfo[i].description.substring(0, 30) %></p>
            <a href="<%= imagesInfo[i].images[0].url %>" data-gallery="portfolioGallery" class="portfolio-lightbox preview-link" 
                  title="<%= imagesInfo[i].title %>"><small><i class="bi bi-zoom-in"></i></small></a>
            <a href="/<%=imagesInfo[i]._id%>/images/gallery-details" class="details-link" title="More Details"><i class="bx bx-link"></i></a> 
          </div>
        </div>
        <% } %>   

      </div>

    </div>
  </section><!-- End Portfolio Section -->
</div>