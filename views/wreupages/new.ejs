<% layout('layouts/boilerplate')%>
<body>
    <section class="admin-panel">
<div class="row">
    <h1 class="text-center">Add Photos</h1>
    <div class="col-6 offset-3">
        <form action="/<%=wreu._id%>/images" method="POST" novalidate class="validate-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Add Title</label>
                <input class="form-control" type="text" id="title" name="title" required>
                <div class="valid-feedback">
                    Noice!</div>
            </div> 
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" name="description" type="text" id="description"> </textarea>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Add Images:</label>
                <input class="form-control" type="file" id="image" name="image" multiple required>
              </div>
            <button class="btn btn-success mb-3">Submit</button>
        </form>
        <button class="btn btn-danger">
            <a href="/wreu">BACK</a>
        </button>
    </div>
</div>
</section>
</body>